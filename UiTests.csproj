<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- Target the latest long-term support .NET runtime -->
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- Selenium WebDriver for browser automation -->
    <PackageReference Include="Selenium.WebDriver" Version="4.16.1" />

    <!-- chromeDriver bundled for local runs; in CI WebDriverManager downloads the correct version automatically -->
    <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="115.0.5790.90800" />

    <!-- WebDriverManager simplifies driver management -->
    <PackageReference Include="WebDriverManager" Version="2.17.6" />

    <!-- xUnit test framework -->
    <PackageReference Include="xunit" Version="2.4.2" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.5" />
  </ItemGroup>

  <!-- Code coverage collector for local runs (optional) -->
  <ItemGroup>
    <PackageReference Include="coverlet.collector" Version="3.2.0" />
  </ItemGroup>
</Project>
